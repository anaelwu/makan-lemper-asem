<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?android:attr/actionBarSize" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <com.iapps.libs.views.ImageViewLoader
                android:id="@+id/imgProfile"
                android:layout_width="@dimen/img_profile"
                android:layout_height="@dimen/img_profile"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tvGreeting"
                style="@style/textLight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imgProfile"
                android:layout_marginLeft="@dimen/margin_med"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_toRightOf="@+id/imgProfile" />

            <TextView
                android:id="@+id/tvName"
                style="@style/textLargeLightBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tvGreeting"
                android:layout_alignRight="@+id/tvGreeting"
                android:layout_below="@+id/tvGreeting" />

            <TextView
                android:id="@+id/tvStatus"
                style="@style/textLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tvName"
                android:layout_alignRight="@+id/tvName"
                android:layout_below="@+id/tvName" />

            <TextView
                android:id="@+id/tvPoints"
                style="@style/textLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tvName"
                android:layout_alignRight="@+id/tvName"
                android:layout_below="@+id/tvStatus" />

            <TextView
                android:id="@+id/tvExpiry"
                style="@style/textLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tvName"
                android:layout_alignRight="@+id/tvName"
                android:layout_below="@+id/tvPoints"
                android:gravity="right" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/btnTransactions"
                android:layout_below="@+id/tvPoints"
                android:background="@drawable/bg_selectable" >

                <com.iapps.libs.views.ImageViewLoader
                    android:id="@+id/imgQr"
                    android:layout_width="@dimen/img_qr"
                    android:layout_height="@dimen/img_qr"
                    android:layout_centerInParent="true"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/textView1"
                    style="@style/textLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imgQr"
                    android:layout_alignLeft="@+id/imgQr"
                    android:layout_alignRight="@+id/imgQr"
                    android:background="@drawable/overlay"
                    android:padding="@dimen/margin_small"
                    android:text="@string/click_vcard" />
            </RelativeLayout>

            <Button
                android:id="@+id/btnTransactions"
                style="@style/btn_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imgProfile"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/tvName"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:text="@string/past_transactions" />
        </RelativeLayout>
    </ScrollView>

</android.support.v4.widget.SwipeRefreshLayout><!-- From: file:/Volumes/Data/Android/TBS-as/tBS/src/main/res/layout/fragment_profile.xml -->