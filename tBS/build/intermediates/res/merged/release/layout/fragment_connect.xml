<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?android:attr/actionBarSize" >

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/White" />

    <TextView
        android:id="@+id/textView1"
        style="@style/textXLargeBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/were_on" />

    <ImageView
        android:id="@+id/imgTwitter"
        android:layout_width="@dimen/btn_connect"
        android:layout_height="@dimen/btn_connect"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_big"
        android:src="@drawable/ic_twitter_xml" />

    <ImageView
        android:id="@+id/imgInstagram"
        android:layout_width="@dimen/btn_connect"
        android:layout_height="@dimen/btn_connect"
        android:layout_alignTop="@+id/imgTwitter"
        android:layout_marginLeft="@dimen/margin_big_x"
        android:layout_toRightOf="@+id/imgTwitter"
        android:src="@drawable/ic_instagram_xml" />

    <ImageView
        android:id="@+id/imgFb"
        android:layout_width="@dimen/btn_connect"
        android:layout_height="@dimen/btn_connect"
        android:layout_above="@+id/linearLayout1"
        android:layout_marginRight="@dimen/margin_big_x"
        android:layout_toLeftOf="@+id/imgTwitter"
        android:src="@drawable/ic_fb_xml" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgTwitter"
        android:layout_centerHorizontal="true" >

        <ImageView
            android:id="@+id/imgPinterest"
            android:layout_width="@dimen/btn_connect"
            android:layout_height="@dimen/btn_connect"
            android:layout_marginRight="@dimen/margin_med"
            android:layout_marginTop="@dimen/margin_big"
            android:src="@drawable/ic_pinterest_xml" />

        <ImageView
            android:id="@+id/imgYoutube"
            android:layout_width="@dimen/btn_connect"
            android:layout_height="@dimen/btn_connect"
            android:layout_marginLeft="@dimen/margin_big"
            android:layout_marginTop="@dimen/margin_big"
            android:src="@drawable/ic_youtube_xml" />
    </LinearLayout>

</RelativeLayout><!-- From: file:/Volumes/Data/Android/TBS-as/tBS/src/main/res/layout/fragment_connect.xml -->