<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.iapps.libs.views.ImageViewLoader
        android:id="@+id/imgBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_overlay_rounded"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/margin_med" >

            <TextView
                android:id="@+id/textView2"
                style="@style/textXLargeLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/member_login" />

            <com.material.widget.FloatingEditText
                android:id="@+id/edtCard"
                style="@style/tbsEdt_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_med"
                android:ems="10"
                android:focusable="false"
                android:hint="@string/tbs_card_number"
                android:inputType="number" />

            <com.material.widget.FloatingEditText
                android:id="@+id/edtDob"
                style="@style/tbsEdt_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:focusable="false"
                android:hint="@string/dob"
                android:inputType="text" />

            <Button
                android:id="@+id/btnLogin"
                style="@style/btn_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/login" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin_big"
            android:layout_marginTop="@dimen/margin_big"
            android:src="@drawable/ic_tbs_text" />

        <Button
            android:id="@+id/btnContact"
            style="@style/btn_transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/margin_small"
            android:paddingRight="@dimen/margin_small"
            android:text="@string/cant_login"
            android:textColor="@color/White" />

        <ImageButton
            android:id="@+id/btnHelp"
            style="@style/imgBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/margin_small"
            android:src="@drawable/ic_help" />
    </RelativeLayout>

</RelativeLayout><!-- From: file:/Volumes/Data/Android/TBS-as/tBS/src/main/res/layout/fragment_login.xml -->