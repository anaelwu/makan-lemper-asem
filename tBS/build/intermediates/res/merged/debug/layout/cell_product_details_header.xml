<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/btnWishlist"
        style="@style/btn_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/margin_med"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="@string/add_to_wishlist" />

    <TextView
        android:id="@+id/tvPrice"
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btnWishlist"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:gravity="right"
        android:textColor="@color/tbs_gray" />

    <LinearLayout
        android:id="@+id/llVariantContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPrice"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_small"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:visibility="gone" >

        <TextView
            style="@style/textBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/variants"
            android:textColor="@color/tbs_gray" />

        <com.iapps.external.FlowLayout.FlowLayout
            android:id="@+id/flVariant"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <!--
        <LinearLayout
            android:id="@+id/llVariant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </LinearLayout>
        -->
    </LinearLayout>

