<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true">

    <com.iapps.libs.views.ImageViewLoader
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/img_campaign"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tvPoints"
        style="@style/textXLargeBoldLight"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/img"
        android:layout_alignLeft="@+id/img"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/img"
        android:layout_alignTop="@+id/img"
        android:background="@drawable/overlay"
        android:gravity="center"/>

</RelativeLayout><!-- From: file:/Users/marcelsantoso/Data/Android/TBS-as/tBS/src/main/res/layout/cell_rewards_catalog.xml -->