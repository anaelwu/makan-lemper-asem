<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true">

        <com.iapps.libs.views.ImageViewLoader
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/img_campaign"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tvPoints"
            style="@style/textXLargeBoldLight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/img"
            android:layout_alignLeft="@+id/img"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/img"
            android:layout_alignTop="@+id/img"
            android:background="@drawable/overlay"
            android:gravity="center"/>

    </RelativeLayout>
</android.support.v7.widget.CardView><!-- From: file:/Volumes/Data/Android/TBS-as/tBS/src/main/res/layout/cell_rewards_catalog.xml -->