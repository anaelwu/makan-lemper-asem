<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:paddingBottom="@dimen/margin_small"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/margin_small" >

    <com.iapps.libs.views.ImageViewLoader
        android:id="@+id/img"
        android:layout_width="@dimen/img_wishlist"
        android:layout_height="@dimen/img_wishlist"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tvName"
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_med"
        android:layout_marginRight="@dimen/margin_med"
        android:layout_toLeftOf="@+id/ll"
        android:layout_toRightOf="@+id/img" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btnBuy"
            style="@style/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:text="@string/buy" />

        <ImageButton
            android:id="@+id/btnDelete"
            style="@style/imgBtn"
            android:src="@drawable/ic_delete"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout><!-- From: file:/Users/marcelsantoso/Data/Android/TBS-as/tBS/src/main/res/layout/cell_wishlist.xml -->