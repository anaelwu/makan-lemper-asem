<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"

                android:layout_height="match_parent">

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="?android:attr/actionBarSize"
        android:background="@color/gray_light"/>

    <TextView
        android:id="@+id/tvName"
        style="@style/textLargeBoldGreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/view1"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>


    <android.support.v7.widget.CardView
        android:id="@+id/cardDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvName"
        android:layout_alignRight="@+id/tvName"
        android:layout_below="@+id/tvName"
        android:layout_marginTop="@dimen/margin_med"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="4dp">

        <LinearLayout
            android:id="@+id/llDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="afterDescendants"
            android:divider="@color/Gray"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAddress"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_med"/>

            <TextView
                android:id="@+id/tvOpening"
                style="@style/textGray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_med"
                android:layout_marginLeft="@dimen/margin_med"
                android:layout_marginRight="@dimen/margin_med"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/LightGrey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/Gray">

                <ImageButton
                    android:id="@+id/btnCall"
                    style="@style/btn_transparent"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/min_size"
                    android:layout_weight="1"
                    android:padding="@dimen/margin_small"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_call"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/LightGrey"/>

                <ImageButton
                    android:id="@+id/btnEmail"
                    style="@style/btn_transparent"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/min_size"
                    android:layout_weight="1"
                    android:padding="@dimen/margin_small"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_email"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvName"
        android:layout_alignRight="@+id/tvName"
        android:layout_below="@+id/cardDetails"
        android:layout_marginTop="@dimen/margin_med"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:descendantFocusability="afterDescendants"
            android:divider="@color/Gray"
            android:orientation="vertical">

            <com.iapps.libs.views.ImageViewLoader
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/img_header"
                android:visibility="visible">
            </com.iapps.libs.views.ImageViewLoader>

            <Button
                android:id="@+id/btnDirections"
                style="@style/btn_transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:paddingLeft="@dimen/margin_med"
                android:paddingRight="@dimen/margin_med"
                android:text="@string/get_directions"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout><!-- From: file:/Users/marcelsantoso/Data/Android/TBS-as/tBS/src/main/res/layout/fragment_store_details.xml -->