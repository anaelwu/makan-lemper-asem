<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="5dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true">

        <com.iapps.libs.views.ImageViewLoader
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/img_campaign"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:focusable="false"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tvName"
            style="@style/text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/img"
            android:gravity="center_vertical"
            android:lines="2"
            android:padding="@dimen/margin_med"/>

    </RelativeLayout>
</android.support.v7.widget.CardView><!-- From: file:/Volumes/Data/Android/TBS-as/tBS/src/main/res/layout/cell_catalog.xml -->